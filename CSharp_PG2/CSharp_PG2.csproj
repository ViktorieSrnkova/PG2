<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="OpenTK" Version="4.7.7" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Shaders\shader.vert" />
    <None Remove="Shaders\shader.frag" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Shaders\basic\basic.frag" />
    <Content Include="Shaders\basic\basic.frag">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <None Remove="Shaders\basic\basic.vert" />
    <Content Include="Shaders\basic\basic.vert">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
